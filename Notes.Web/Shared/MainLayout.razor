@inherits LayoutComponentBase
@inject Settings Settings

<AuthorizeView>
    <NotAuthorized>
        <LoginView/>
    </NotAuthorized>
    <Authorized>
        <Header />
        <Sidebar />
        <main id="main" class="main">
            <h1>Hello @Settings.FirstName !!</h1>
            @Body
        </main>
    </Authorized>
    <Authorizing>
        <Spinner />
    </Authorizing>
</AuthorizeView>
