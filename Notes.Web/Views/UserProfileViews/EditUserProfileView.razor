                <div class="tab-pane fade profile-edit pt-3" id="profile-edit">

                  <!-- Profile Edit Form -->
                  <EditForm Model="@Vm" OnValidSubmit="@Vm.SaveAsync" class="row g-3 needs-validation">
                   

                    <div class="row mb-3">
                      <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Full Name</label>
                      <div class="col-md-8 col-lg-9">
                        <InputText name="fullName" class="form-control" id="fullName" @bind-Value="Vm.FullName"/>
                      </div>
                    </div>

                    <div class="row mb-3">
                      <label for="about" class="col-md-4 col-lg-3 col-form-label">About</label>
                      <div class="col-md-8 col-lg-9">
                        <InputTextArea @bind-Value="Vm.About" name="about" class="form-control" id="about" style="height: 100px"/>
                      </div>
                    </div>

                    <div class="row mb-3">
                      <label for="company" class="col-md-4 col-lg-3 col-form-label">Country</label>
                      <div class="col-md-8 col-lg-9">
                        <InputText name="company" @bind-Value="Vm.Country" class="form-control" id="company" />
                      </div>
                    </div>


                    <div class="row mb-3">
                      <label for="Address" class="col-md-4 col-lg-3 col-form-label">Address</label>
                      <div class="col-md-8 col-lg-9">
                        <InputText name="address" @bind-Value="Vm.Address" class="form-control" id="Address" />
                      </div>
                    </div>

                    <div class="row mb-3">
                      <label for="Phone" class="col-md-4 col-lg-3 col-form-label">Phone</label>
                      <div class="col-md-8 col-lg-9">
                        <InputText name="phone" @bind-Value="Vm.Phone" class="form-control" id="Phone" />
                      </div>
                    </div>

                    <div class="row mb-3">
                      <label for="Email" class="col-md-4 col-lg-3 col-form-label">Email</label>
                      <div class="col-md-8 col-lg-9">
                        <InputText name="email" @bind-Value="Vm.Email" type="email" class="form-control" id="Email" />
                      </div>
                    </div>

                    <div class="row mb-3">
                      <label for="Twitter" class="col-md-4 col-lg-3 col-form-label">Twitter Profile</label>
                      <div class="col-md-8 col-lg-9">
                        <InputText name="twitter" @bind-Value="Vm.TwitterUrl" class="form-control" id="Twitter" />
                      </div>
                    </div>

                    <div class="row mb-3">
                      <label for="Facebook" class="col-md-4 col-lg-3 col-form-label">Facebook Profile</label>
                      <div class="col-md-8 col-lg-9">
                        <InputText name="facebook" @bind-Value="Vm.FacebookUrl" class="form-control" id="Facebook"/>
                      </div>
                    </div>

                    <div class="row mb-3">
                      <label for="Instagram" class="col-md-4 col-lg-3 col-form-label">Instagram Profile</label>
                      <div class="col-md-8 col-lg-9">
                        <InputText name="instagram" @bind-Value="Vm.InstagamUrl" class="form-control" id="Instagram"/>
                      </div>
                    </div>

                 
                    <div class="text-center">
                      <button type="submit" class="btn btn-primary">Save Changes</button>
                    </div>
                  </EditForm><!-- End Profile Edit Form -->

                </div>