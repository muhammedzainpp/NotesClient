<div class="mx-3 mt-5">
    <EditForm Model="@Vm" OnValidSubmit="@Vm.SaveNoteAsync">
            <div class="mb-2">
                <label for="title">Title:</label>
                <InputText id="title" @bind-Value="Vm.Title" class="w-100" />
            </div>
            <div>
                <label for="description">Description:</label>
                <InputTextArea id="description" @bind-Value="Vm.Description" class="w-100" />
            </div>
            <div class="d-flex flex-row-reverse">
                <button class="btn btn-primary my-2" type="submit">Save Note</button>
            </div>
    </EditForm>
</div>