<div class="mx-3 mt-5">
    <EditForm Model="@Vm" OnValidSubmit="@Vm.RegisterUserAsync">
        <div class="mb-2">
            <label for="title">Email:</label>
            <InputText id="title" @bind-Value="Vm.Email" class="w-100" />
        </div>
        <div>
            <label for="description">Password:</label>
            <InputText type="password"  id="title" @bind-Value="Vm.Password" class="w-100" />
        </div>
        <div>
            <label for="description">Confirm Password:</label>
            <InputText type="password" id="title" @bind-Value="Vm.ConfirmPassword" class="w-100" />
        </div>
        <div class="d-flex flex-row-reverse">
            <button class="btn btn-primary my-2" type="submit">Register</button>
        </div>
    </EditForm>
</div>